{
  "name": "minista-monorepo",
  "version": "4.0.0-alpha.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:ssg && npm run build:enhance && npm run build:bundle && npm run build:entry && npm run build:head && npm run build:utils",
    "build:src": "npm run build:main-src && npm run build:ssg-src && npm run build:enhance-src && npm run build:bundle-src && npm run build:entry-src && npm run build:head-src && npm run build:utils-src",
    "build:main": "cd ./packages/minista && npm run build",
    "build:main-src": "cd ./packages/minista && npm run build:src",
    "build:ssg": "cd ./packages/plugin-ssg && npm run build",
    "build:ssg-src": "cd ./packages/plugin-ssg && npm run build:src",
    "build:enhance": "cd ./packages/plugin-enhance && npm run build",
    "build:enhance-src": "cd ./packages/plugin-enhance && npm run build:src",
    "build:bundle": "cd ./packages/plugin-bundle && npm run build",
    "build:bundle-src": "cd ./packages/plugin-bundle && npm run build:src",
    "build:entry": "cd ./packages/plugin-entry && npm run build",
    "build:entry-src": "cd ./packages/plugin-entry && npm run build:src",
    "build:beautify": "cd ./packages/plugin-beautify && npm run build",
    "build:beautify-src": "cd ./packages/plugin-beautify && npm run build:src",
    "build:head": "cd ./packages/shared-head && npm run build",
    "build:head-src": "cd ./packages/shared-head && npm run build:src",
    "build:utils": "cd ./packages/shared-utils && npm run build",
    "build:utils-src": "cd ./packages/shared-utils && npm run build:src",
    "test": "vitest run",
    "test:w": "vitest watch",
    "play": "npx minista ./playground/_default",
    "play:build": "npx minista build ./playground/_default",
    "play:preview": "npx minista preview ./playground/_default",
    "play:enhance": "npx minista ./playground/enhance",
    "play:enhance-build": "npx minista build ./playground/enhance",
    "play:enhance-preview": "npx minista preview ./playground/enhance",
    "play:entry": "npx minista ./playground/entry",
    "play:entry-build": "npx minista build ./playground/entry",
    "play:entry-preview": "npx minista preview ./playground/entry",
    "play:beautify": "npx minista ./playground/beautify",
    "play:beautify-build": "npx minista build ./playground/beautify",
    "play:beautify-preview": "npx minista preview ./playground/beautify",
    "deno": "deno run --allow-read --allow-net --allow-env --allow-run --import-map=import_map.json ./packages/minista/bin/minista.js ./playground/_default",
    "deno:build": "deno run --allow-read --allow-net --allow-env --allow-run --import-map=import_map.json ./packages/minista/bin/minista.js build ./playground/_default",
    "bun": "bun minista ./playground/_default",
    "bun:build": "bun minista build ./playground/_default",
    "up": "npx npm-check-updates --deep --reject minista-shared-head,minista-shared-utils",
    "up:u": "npx npm-check-updates --deep -u --reject minista-shared-head,minista-shared-utils",
    "rev": "npx npm-replace-versions --deps minista-shared-head,minista-shared-utils"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "devDependencies": {
    "@types/js-beautify": "^1.14.3",
    "@types/node": "^20.10.6",
    "@types/picomatch": "^2.3.3",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "esbuild": "^0.19.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  }
}
