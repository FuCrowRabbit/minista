{
  "name": "minista-monorepo",
  "version": "4.0.0-alpha.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "build": "run-s build:utils build:head && run-p build:main build:ssg build:enhance build:bundle build:entry build:beautify",
    "build-src": "run-p build-src:*",
    "build:main": "cd ./packages/minista && npm run build",
    "build-src:main": "cd ./packages/minista && npm run build-src",
    "build:ssg": "cd ./packages/plugin-ssg && npm run build",
    "build-src:ssg": "cd ./packages/plugin-ssg && npm run build-src",
    "build:enhance": "cd ./packages/plugin-enhance && npm run build",
    "build-src:enhance": "cd ./packages/plugin-enhance && npm run build-src",
    "build:bundle": "cd ./packages/plugin-bundle && npm run build",
    "build-src:bundle": "cd ./packages/plugin-bundle && npm run build-src",
    "build:entry": "cd ./packages/plugin-entry && npm run build",
    "build-src:entry": "cd ./packages/plugin-entry && npm run build-src",
    "build:beautify": "cd ./packages/plugin-beautify && npm run build",
    "build-src:beautify": "cd ./packages/plugin-beautify && npm run build-src",
    "build:archive": "cd ./packages/plugin-archive && npm run build",
    "build-src:archive": "cd ./packages/plugin-archive && npm run build-src",
    "build:head": "cd ./packages/shared-head && npm run build",
    "build-src:head": "cd ./packages/shared-head && npm run build-src",
    "build:utils": "cd ./packages/shared-utils && npm run build",
    "build-src:utils": "cd ./packages/shared-utils && npm run build-src",
    "test": "vitest run",
    "test:w": "vitest watch",
    "play": "npx minista ./playground/_default",
    "play-build": "npx minista build ./playground/_default",
    "play-preview": "npx minista preview ./playground/_default",
    "play:enhance": "npx minista ./playground/enhance",
    "play-build:enhance": "npx minista build ./playground/enhance",
    "play-preview:enhance": "npx minista preview ./playground/enhance",
    "play:entry": "npx minista ./playground/entry",
    "play-build:entry": "npx minista build ./playground/entry",
    "play-preview:entry": "npx minista preview ./playground/entry",
    "play:beautify": "npx minista ./playground/beautify",
    "play-build:beautify": "npx minista build ./playground/beautify",
    "play-preview:beautify": "npx minista preview ./playground/beautify",
    "play:archive": "npx minista ./playground/archive",
    "play-build:archive": "npx minista build ./playground/archive",
    "play-preview:archive": "npx minista preview ./playground/archive",
    "deno": "deno run --allow-read --allow-net --allow-env --allow-run --import-map=import_map.json ./packages/minista/bin/minista.js ./playground/_default",
    "deno:build": "deno run --allow-read --allow-net --allow-env --allow-run --import-map=import_map.json ./packages/minista/bin/minista.js build ./playground/_default",
    "bun": "bun minista ./playground/_default",
    "bun:build": "bun minista build ./playground/_default",
    "up": "npx npm-check-updates --deep --reject minista-shared-head,minista-shared-utils",
    "up:u": "npx npm-check-updates --deep -u --reject minista-shared-head,minista-shared-utils",
    "rev": "npx npm-replace-versions --deps minista-shared-head,minista-shared-utils"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/js-beautify": "^1.14.3",
    "@types/node": "^20.10.6",
    "@types/picomatch": "^2.3.3",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "esbuild": "^0.19.11",
    "npm-run-all2": "^6.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  }
}
